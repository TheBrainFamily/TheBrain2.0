{
  "name": "thebrain-mobile",
  "version": "0.1.1",
  "private": true,
  "devDependencies": {
    "apollo-test-utils-with-context": "^0.3.5",
    "babel-eslint": "^7.2.3",
    "babel-jest": "22.0.4",
    "babel-plugin-module-rewrite-with-root": "^0.3.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-node6": "^11.0.0",
    "concurrently": "^3.4.0",
    "detox": "6.0.4",
    "detox-expo-helpers": "^0.2.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "graphql-tools": "0.10.1",
    "jest": "22.0.5",
    "jest-environment-node": "^22.0.5",
    "jest-expo": "23.0.0",
    "jsdom": "11.1.0",
    "mock-async-storage": "^2.0.2",
    "react-native-mock": "^0.3.1",
    "react-native-mock-render": "^0.0.19",
    "react-native-scripts": "1.8.1",
    "react-test-renderer": "16.0.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "thebrain-shared": "../shared"
  },
  "main": "./node_modules/react-native-scripts/build/bin/crna-entry.js",
  "scripts": {
    "preinstall": "npm link ../shared",
    "start": "node react-native-start-with-link.js",
    "runExpo": "react-native-scripts start",
    "eject": "react-native-scripts eject",
    "android": "react-native-scripts android",
    "ios": "react-native-scripts ios",
    "test": "node node_modules/jest/bin/jest.js --watch",
    "standard": "standard --verbose --fix | snazzy",
    "e2e": "detox test -c ios.sim --reuse"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-router-native)/"
    ]
  },
  "dependencies": {
    "events": "^1.1.1",
    "expo": "^23.0.4",
    "flow-bin": "^0.40.0",
    "graphql-tag": "^2.0.0",
    "immutability-helper": "^2.1.2",
    "lodash": "^4.17.4",
    "react": "16.0.0",
    "react-apollo": "1.4.15",
    "react-dom": "^16.2.0",
    "react-native": "0.50.3",
    "react-native-animatable": "^1.2.2",
    "react-native-device-info": "^0.11.0",
    "react-native-emoji": "^1.2.0",
    "react-native-facebook-login": "^1.5.0",
    "react-native-keyboard-aware-scroll-view": "0.3.0",
    "react-native-linear-gradient": "^2.0.0",
    "react-native-material-textfield": "^0.6.5",
    "react-native-orientation": "^3.1.0",
    "react-native-youtube": "^1.0.0-beta.2",
    "react-redux": "^5.0.4",
    "react-router-native": "^4.0.0",
    "react-router-redux": "^4.0.8",
    "remote-redux-devtools": "^0.5.7",
    "stream": "0.0.2"
  },
  "rnpm": {
    "assets": [
      "./fonts"
    ]
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "tests/e2e/config.json",
    "configurations": {
      "ios.sim": {
        "binaryPath": ".expo/ios-simulator-app-cache/Exponent-2.3.0.app",
        "type": "ios.simulator",
        "name": "iPhone 7"
      }
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "flow-typed/",
      "ios/",
      "android/"
    ],
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "beforeAll",
      "after",
      "afterEach",
      "afterAll",
      "it",
      "expect",
      "$Keys"
    ]
  }
}
